<div class="header">
    <div class="container">
        <div class="w3layouts_logo">
            <a href="/"><h1>IG<span>Database</span></h1></a>
        </div>
        <div class="w3_search">
            <form action="/search" method="get">
                <input type="text" name="q" placeholder="Search" required="">
                <input type="submit" value="Go">
            </form>
        </div>
        <div class="w3l_sign_in_register">
            {{#if isAuthenticated}}
                <ul>
                    <li><i class="fa user" aria-hidden="true"></i> Hi there!</li>
                    <li><a href="/logout">LogOut</a></li>
                </ul>
            {{else}}
                <ul>
                    <li><i class="fa fa-user" aria-hidden="true"></i> Welcome Guest!</li>
                    <li><a href="#" data-toggle="modal" data-target="#myModal">Log In</a></li>
                </ul>
            {{/if}}
        </div>
        <div class="clearfix"> </div>
    </div>
</div>